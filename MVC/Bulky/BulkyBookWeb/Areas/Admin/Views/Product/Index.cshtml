@model List<Product>;

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Product List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-lg-2">
                <a asp-controller="Product" asp-action="Upsert" class="btn btn-primary col-12 ">
                    <i class="bi bi-plus-circle"></i> Create new product
                </a>
            </div>
        </div>

        <table id="tblDataProduct" class="table table-bordered display responsive nowrap" style="width:100%">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>ISBN</th>
                    <th>Price</th>
                    <th>Author</th>
                    <th>Category</th>
                    <th>Action</th>
                </tr>
            </thead>
        </table>

    </div>
</div>

@section Scripts{
    <script src="~/js/product.js"></script>
}