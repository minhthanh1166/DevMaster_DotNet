<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Lesson07</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Lesson07.styles.css" asp-append-version="true" />
</head>
<body>
    <nav class="nav navbar-light">
        <div class="container">
           <ul class="nav navbar-nav">
                <li>
                    <a asp-controller="Home" asp-action="Index">Trang chủ</a>
                </li>
                <li>
                    <a asp-controller="Home" asp-action="Contact">Giới thiệu</a>
                </li>
                <li>
                    <a asp-controller="Home" asp-action="About">Liên hệ</a>
                </li>
           </ul>
        </div>
    </nav>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
