@model List<Product>;

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Product List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row py-4">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Product" asp-action="Upsert" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Create new product
                </a>
            </div>
        </div>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>ISBN</th>
                    <th>Price</th>
                    <th>Author</th>
                    <th>Category</th>
                    <th>Action</th>
                </tr>
            </thead> 
            <tbody>
                @foreach (var item in Model.OrderBy(x => x.Price))
                {
                    <tr>
                        <td>@item.Title</td>
                        <td>@item.ISBN</td>
                        <td>@item.Price</td>
                        <td>@item.Author</td>
                        <td>@item.CategoryId</td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-action="Upsert" class="btn btn-primary me-2" asp-route-id="@item.Id">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">
                                    <i class="bi bi-trash3-fill"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>